@using LtInfo.Common
@using ProjectFirma.Web.Views.PerformanceMeasure
@inherits RelatedTaxonomyTiers

@if (ViewDataTyped.TaxonomyLeafPerformanceMeasures.Any())
{
    <table class="summaryLayout">
        <tr>
            <th>@ViewDataTyped.TaxonomyTierHeaderDisplayName</th>
            <th>@ViewDataTyped.IsPrimaryTaxonomyTierHeaderDisplayName</th>
        </tr>
        @foreach (var taxonomyTierPerformanceMeasure in ViewDataTyped.TaxonomyLeafPerformanceMeasures.OrderBy(x => x.Key.GetSortOrder()).ThenBy(x => x.Key.GetDisplayName(), StringComparer.InvariantCultureIgnoreCase))
        {
            <tr>
                <td>@taxonomyTierPerformanceMeasure.Key.GetDisplayNameAsUrl()</td>
                <td style="text-align: center">@taxonomyTierPerformanceMeasure.First().IsPrimaryTaxonomyLeaf.ToCheckboxImageOrEmpty()</td>
            </tr>
        }
    </table>
}
else
{
    <p class="systemText">No @ViewDataTyped.TaxonomyTierDisplayNamePluralized set for this @ViewDataTyped.PerformanceMeasureDisplayName.</p>
}
